<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
  xmlns:g="urn:import:com.google.gwt.user.client.ui">
  <ui:style>
    .important {
    	font-weight: bold;
    }
  </ui:style>
  <g:HTMLPanel>
    <g:Button styleName="{style.important}" ui:field="button1" />
    <g:Button styleName="{style.important}" ui:field="button2" />
    <g:Button styleName="{style.important}" ui:field="button3" />
    <g:RichTextArea ui:field="textarea" width='100%'
      height='100%'></g:RichTextArea>
  </g:HTMLPanel>
</ui:UiBinder> 